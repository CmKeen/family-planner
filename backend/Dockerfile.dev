FROM node:20-alpine

WORKDIR /app

# Install OpenSSL for Prisma
RUN apk add --no-cache openssl

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install ALL dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

EXPOSE 3001

# Development server with hot reload
CMD ["npm", "run", "dev"]
