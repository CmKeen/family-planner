{
  "name": "family-planner",
  "version": "1.0.0",
  "private": true,
  "description": "Family meal planning application with multi-dietary constraints",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "setup": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "prepare": "husky"
  },
  "keywords": [
    "meal-planning",
    "family",
    "dietary-constraints",
    "kosher",
    "halal"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "lint-staged": {
    "backend/src/**/*.{ts,js}": "echo Linting backend files...",
    "frontend/src/**/*.{ts,tsx,js,jsx}": "echo Linting frontend files..."
  }
}
